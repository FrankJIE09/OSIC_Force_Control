<mujoco>
  <compiler angle="radian" meshdir="./mesh" texturedir="./texture" />
  <visual>
    <quality shadowsize="8192" offsamples="8" numslices="64" numstacks="64" />
    <headlight active="1" />
    <rgba haze="0.15 0.25 0.35 1" />
  </visual>

  <option timestep="0.001" integrator="Euler" iterations="50" solver="Newton" impratio="10" noslip_iterations="10" tolerance="1e-8" cone="elliptic">
    <flag actuation="enable" gravity="enable" warmstart="enable" />
  </option>

  <asset>
    <texture type="skybox" builtin="gradient" rgb1="0.3 0.5 0.7" rgb2="0 0 0" width="512" height="512" />
    <texture name="plane" type="2d" builtin="checker" rgb1=".2 .3 .4" rgb2=".1 0.15 0.2" width="512" height="512" mark="cross" markrgb=".8 .8 .8" />
    <texture name="surface" type="2d" builtin="checker" rgb1=".4 .5 .6" rgb2=".3 .4 .5" width="512" height="512" mark="cross" markrgb=".9 .9 .9" />
    <material name="plane" reflectance="0.3" texture="plane" texrepeat="1 1" texuniform="true" />
    <material name="surface_mat" reflectance="0.5" texture="surface" texrepeat="2 2" texuniform="true" />
  </asset>

  <include file="panda_with_disk.xml" />

  <worldbody>
    <geom name="floor" pos="0 0 0" group="1" size="0 0 .1" type="plane" material="plane" condim="3" />

    <body name="work_surface" pos="0.5 0 0.15">
      <geom name="surface"
            type="box"
            size="0.4 0.4 0.02"
            material="surface_mat"
            condim="6"
            friction="0.3 0.3 0.1"
            solimp="0.95 0.99 0.001"
            solref="0.01 1" />
    </body>

    <camera name="cam" mode="targetbody" pos="1.5 0.0 1.0" target="panda_hand" />
    <light directional="true" diffuse=".2 .2 .2" specular="0 0 0" pos="0 1 5" dir="0 -1 -1" castshadow="false"/>
    <light directional="false" diffuse=".8 .8 .8" specular="0.3 0.3 0.3" pos="0 -1 4" dir="0 0 -1" />
  </worldbody>
  <equality />
</mujoco>